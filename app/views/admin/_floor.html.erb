<fieldset class="address">
  <legend> Floor </legend>

  <div class="field full">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= image_tag(form.object.image_url, class:'image-preview') if form.object.image? %>
    <%= form.file_field :image %>
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="action">
    <%= form.hidden_field :_destroy %>
    <%# form.label :_destroy, "Delete Address" %>
    <%= link_to '<span class="fas fa-trash-alt"></span>'.html_safe , '#', class: "remove-fields", title: "Delete Floor" %>
  </div>
</fieldset>