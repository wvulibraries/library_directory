<h2> <%= @service.name %> </h2>

<div class="department">
  <strong> Department: </strong>
  <%= @service.department.name %>
</div> <br/>

<% if @service.phones.present? %>
  <div class="service-points">
    <strong> Phones(s): </strong>
    <ul>
      <% @service.phones.each do |phone| %>
        <li> 
          <strong> <%= phone.number_types.capitalize %>:  </strong>
          <a href="tel:<%= phone.number %>">
            <%= phone.number %> 
          </a> 
        </li> 
      <% end %>
    </ul>
  </div>
<% end %>

<div class="show-action">
    <div class="actions"> 
      <%= link_to '<span class="fas fa-building"></span> Services'.html_safe, '/admin/service_points', { class: 'new-button' } %>
      <%= link_to '<span class="fas fa-edit"></span> Edit'.html_safe, edit_admin_service_point_path(@service), { class: 'edit-button' } %>
      <%= link_to '<span class="fas fa-trash"></span> Destroy'.html_safe, admin_service_point_path(@service), method: :delete, class: 'delete-button', data: { confirm: 'Are you sure?' }, title:'delete' %>
    </div>
  </div>