<fieldset class="department">
  <legend> department </legend>

  <div class="field full">
    <%= form.label :name, 'Department Name', class: 'required' %>
    <%= form.text_field :name %>
  </div>

  <div class="field full">
    <%= form.label :description, 'Department Description' %>
    <%= form.text_area :description %>
  </div>

  <div class="action">
    <%= form.hidden_field :_destroy %>
    <%# form.label :_destroy, "Delete Department" %>
    <%= link_to '<span class="fas fa-trash-alt"></span>'.html_safe , '#', class: "remove-fields delete-department", title: "Delete Department" %>
  </div>
</fieldset>